<div id="posts">




    <p>{{post.title}}:{{post.description}}</p>
    <p>Created by {{user.name}} on {{format_date post.createdAt}}</p>


    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Create a New Comment:</h3>

            <form class="form new-comment-form" data-postid="{{post.id}}">

                <div class="form-group">
                    <label for="comment-content">description:</label>
                    <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Comment</button>
                </div>
            </form>
        </div>

    </div>
    <div class=" col-md-6">
        {{#each post.Comments as |comment|}}


        <p>{{comment.content}}:{{comment.user_id}}</p>

        {{/each}}
    </div>
</div>

<script src="/js/comment.js"></script>